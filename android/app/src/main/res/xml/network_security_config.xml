<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTP for all development IPs -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Development machine IPs -->
        <domain includeSubdomains="true">172.23.48.1</domain>
        <domain includeSubdomains="true">13.201.5.235</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        
        <!-- Common development IP ranges -->
        <domain includeSubdomains="true">192.168.1.0/24</domain>
        <domain includeSubdomains="true">192.168.0.0/24</domain>
        <domain includeSubdomains="true">172.16.0.0/12</domain>
        <domain includeSubdomains="true">10.0.0.0/8</domain>
    </domain-config>
    
    <!-- Allow cleartext traffic for all development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>
